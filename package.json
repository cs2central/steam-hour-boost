{
  "name": "steam-hour-boost",
  "version": "1.1.0",
  "description": "Steam hour booster with web UI - companion to steam-authenticator-linux",
  "main": "src/index.js",
  "bin": {
    "steam-hour-boost": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "node scripts/build-all.js"
  },
  "keywords": [
    "steam",
    "hour-boost",
    "idler",
    "gaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "multer": "^1.4.5-lts.1",
    "sql.js": "^1.10.3",
    "steam-totp": "^2.1.2",
    "steam-user": "^5.0.9"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "@yao-pkg/pkg": "^5.11.0",
    "archiver": "^6.0.1"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js",
      "node_modules/lzma/**/*.js"
    ],
    "assets": [
      "views/**/*",
      "public/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm",
      "node_modules/@doctormckay/steam-crypto/*.pem"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
